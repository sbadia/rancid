#!/bin/sh

ENVFILE="`dirname $0`/env"

. $ENVFILE

if [ $# -lt 1 ]; then
    DOME="$LIST_OF_GROUPS"
else
    DOME="$*"
fi

for GROUP in $DOME
do

	LOCKFILE=/tmp/.$GROUP.run.lock

	(
		echo starting: `date`
		echo

		if [ -f $LOCKFILE ]
		then
			echo hourly cisco diffs failed: $LOCKFILE exists
			/bin/ls -l $LOCKFILE
		else
			/usr/bin/touch $LOCKFILE
			control_rancid $GROUP
			/bin/rm -f $LOCKFILE
		fi

		echo
		echo ending: `date`
	) >$BASEDIR/logs/$GROUP.`date +%Y%m%d.%H%M%S` 2>&1 
done
